{
    "ts-node": {
        "files": true,
    },
	"compilerOptions": {
		"module": "commonjs",
        "target": "ES6",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        },
		"outDir": "dist",
        "moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		".eslintrc.cjs"
	]
}
