{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "dist",
		"esModuleInterop": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		".eslintrc.cjs"
	]
}
